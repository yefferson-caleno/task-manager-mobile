<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="@android:dimen/notification_large_icon_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/txtLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/share_tech"
            android:gravity="center"
            android:text="@string/txt_login_title"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_title"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtLabelEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/share_tech"
            android:text="@string/txt_hint_email"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_info" />

        <EditText
            android:id="@+id/editTextEmailAddressLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/share_tech"
            android:hint="@string/txt_hint_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHighlight="#2196F3"
            android:textColorHint="@color/txt_hint_color"
            android:textColorLink="#2196F3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtLabelPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/share_tech"
            android:text="@string/txt_hint_passw"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_info" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/share_tech"
            android:hint="@string/txt_hint_passw"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="#2196F3"
            android:textColorHint="@color/txt_hint_color"
            android:textColorLink="#2196F3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/txtForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/share_tech"
            android:gravity="center"
            android:onClick="goToForgotPassword"
            android:text="¿Olvidaste tu contraseña?"
            android:textAllCaps="true"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_info"
            android:textStyle="bold|italic"
            android:visibility="invisible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btn_bg_color"
            android:fontFamily="@font/share_tech"
            android:onClick="signIn"
            android:text="@string/btn_login"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_btn"
            android:textStyle="bold|italic"
            app:backgroundTint="@color/btn_bg_color"
            app:cornerRadius="38dp"
            app:strokeColor="@color/black"
            app:strokeWidth="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/btn_bg_color"
            android:fontFamily="@font/share_tech"
            android:onClick="goToSignUp"
            android:text="@string/btn_signUp"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_btn"
            android:textStyle="bold|italic"
            app:backgroundTint="@color/btn_bg_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>